{
    "api_key": "${env:OPENAI_API_KEY}",
    "params": {
        "input_audio_format": "pcm16",
        "input_audio_transcription": {
            "model": "whisper-1",
            "prompt": "Please transcribe the following audio into text. Output in English.",
            "language": "en"
        },
        "turn_detection": {
            "type": "server_vad",
            "threshold": 0.5,
            "prefix_padding_ms": 300,
            "silence_duration_ms": 500
        }
    }
}
